<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <tr>
    <th>#</th>
    <th>Имя</th>
    <th>Фамилия</th>
    <th>Отчество</th>
    <th>ФИО в родительном падеже</th>
    <th>Пол</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% people.each.with_index(1) do |person, index| %>
    <tr>
      <td><%= index %></td>
      <td><%= person.first_name %></td>
      <td><%= person.last_name %></td>
      <td><%= person.middle_name %></td>
      <td><%= person.declension_name.genitive[:full_name] %></td>
      <td><%= person.sex %></td>
      <td><%= person_actions(person) %></td>
    </tr>
  <% end %>
  </tbody>
</table>